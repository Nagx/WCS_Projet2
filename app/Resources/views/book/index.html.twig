{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
    <link rel="stylesheet" href="{{ asset('css/events.css') }}">
{% endblock %}
{% block body %}
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            {% for book in carouselBooks %}
                <div class="item row">
                    <div class="col-xs-4">
                        <div class="img-container">
                            <img src="{{ asset(covers_directory ~ book.imageUrl) }}" alt="{{ book.title }}">
                        </div>
                    </div>
                    <div class="col-xs-8">
                        <div class="title-container">
                            <p>
                                <span class="quote">"</span>
                                {{ book.title }}
                                <span class="quote">"</span>
                                <span class="carousel-know-more">
                                    <a href="{{ path('book_showToPublic', {'id': book.id}) }}">En savoir +</a>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- block event -->
    <div class="container event">
        <div class="row">
            <div class="col-xs-5 col-sm-2 title-event">évènements</div>
            <div class="col-xs-7 col-sm-10 content-event">
                <ul>
                    {% for event in events %}
                        <li class="event-title">{{ event.title }}</li>
                        <li>{{ event.description }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>


    <!-- block book -->

    <h3 class="title_publish container">Récemment publiés</h3>
    <div class="container no-padding container_block_books">
        <div class="row no-padding">
        {% for book in books %}
            <div class="block_global  col-md-4 col-sm-6 col-xs-12">
                <div class="block_books vertical_center_block">
                    <div class="block_img text-center col-md-12 col-sm-12 col-xs-4">
                        <img class="img_book" src="{{ asset(covers_directory ~ book.imageUrl) }}" alt="{{ book.title }}"/>
                    </div>
                    <div class="block_text col-xs-8 col-md-12 col-sm-12">
                        <h2>{{ book.title }}</h2>
                        <h3>{{ book.author }}</h3>
                        <p class="text_intro">{{ book.description[:50] }} ...</p>
                    </div>
                </div>
                <div class="block_btn ">
                    <a class="btn_more" href="{{ path('book_showToPublic', {'id': book.id}) }}"> En savoir + </a>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    <!-- end block book -->

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/carousel.js') }}"></script>
{% endblock %}