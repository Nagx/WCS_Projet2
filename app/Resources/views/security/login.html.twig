{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}
    <div id="login_form">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


<form action="{{ path('login') }}" method="post">
    <label for="username">Nom Utilisateur:</label><br />
    <input type="text" id="username" name="_username" value="{{ last_username }}"/><br />
    <br />
    <label for="password">Mot de Passe:</label><br />
    <input type="password" id="password" name="_password"/><br /><br />
    <input type="hidden" name="_target_path" value="{{ path('sonata_admin_dashboard') }}"/>

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">Connexion</button>
    </form>
    </div>
{% endblock %}